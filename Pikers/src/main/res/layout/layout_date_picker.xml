<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="center">

    <com.uratio.pikers.widget.view.WheelListView
        android:id="@+id/wv_start_year"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5" />

    <TextView
        android:id="@+id/label_start_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.uratio.pikers.widget.view.WheelListView
        android:id="@+id/wv_start_month"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/label_start_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.uratio.pikers.widget.view.WheelListView
        android:id="@+id/wv_start_day"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/label_start_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.uratio.pikers.widget.view.WheelListView
        android:id="@+id/wv_end_year"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5" />

    <TextView
        android:id="@+id/label_end_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.uratio.pikers.widget.view.WheelListView
        android:id="@+id/wv_end_month"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/label_end_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.uratio.pikers.widget.view.WheelListView
        android:id="@+id/wv_end_day"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/label_end_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>